<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="ButtonStyle" parent="AppTheme">
        <item name="android:background">#848080</item>
        <item name="android:radius">0dp</item>
        <item name="android:textColor">#FFF</item>
    </style>
    
    <style name="RepoContainerStyle" parent="AppTheme">
        <item name="android:dividerPadding">1dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/border_box</item>
    </style>

    <style name="BranchContainerStyle" parent="RepoContainerStyle"></style>

    <style name="RepoStyle" parent="AppTheme">
        
    </style>



</resources>
